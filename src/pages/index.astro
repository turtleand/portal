---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import QuadrantGrid from '../components/QuadrantGrid.astro';
import Showcase from '../components/Showcase.astro';
import Footer from '../components/Footer.astro';
import { initI18n, makeCopyToken } from '../utils/i18n';

const { locale, dictionary, t } = initI18n(Astro);

const heroTitleSegments = {
  before: makeCopyToken('hero.title.before', t),
  highlight: makeCopyToken('hero.title.highlight', t),
  after: makeCopyToken('hero.title.after', t),
};
const heroDescription = makeCopyToken('hero.description', t);
const quadrantLabels = {
  ai: makeCopyToken('quadrants.ai.label', t),
  growth: makeCopyToken('quadrants.growth.label', t),
  build: makeCopyToken('quadrants.build.label', t),
  blockchain: makeCopyToken('quadrants.blockchain.label', t),
};
const quadrantTaglines = {
  ai: makeCopyToken('quadrants.ai.tagline', t),
  growth: makeCopyToken('quadrants.growth.tagline', t),
  build: makeCopyToken('quadrants.build.tagline', t),
  blockchain: makeCopyToken('quadrants.blockchain.tagline', t),
};
const footerRightsCopy = makeCopyToken('footer.rights', t);

const showcaseSectionTitle = makeCopyToken('showcase.sectionTitle', t);
const showcaseItems = [
  {
    titleCopy: makeCopyToken('showcase.items.notebooklm.title', t),
    descriptionCopy: makeCopyToken('showcase.items.notebooklm.description', t),
    href: 'https://notebooklm.google.com/notebook/17fc4b1a-66c3-40c9-9a9e-d1c189f25bfa',
    emoji: 'ðŸ““',
    tool: 'NotebookLM',
  },
];
---
<Layout locale={locale} dictionary={dictionary}>
  <Hero titleSegments={heroTitleSegments} description={heroDescription} />
  <QuadrantGrid labels={quadrantLabels} taglines={quadrantTaglines} />
  <Showcase sectionTitleCopy={showcaseSectionTitle} items={showcaseItems} />
  <Footer slot="footer" rightsCopy={footerRightsCopy} />
</Layout>
