---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";
import type { CopyToken } from "../utils/i18n";

interface Props {
  noMarginTop?: boolean;
  rightsCopy: CopyToken;
}

const currentYear = new Date().getFullYear();
const { noMarginTop = false, rightsCopy }: Props = Astro.props;
---

<footer
  class={`w-full bg-[#0b1823] text-sm text-offWhite/90 shadow-[0_-20px_60px_rgba(1,4,9,0.55)] ${
    noMarginTop ? "" : "mt-auto"
  }`}
>
  <Hr noPadding />
  <div
    class="footer-wrapper mx-auto flex w-full max-w-6xl flex-col items-center justify-between gap-4 px-6 pb-8 text-center sm:flex-row-reverse sm:py-4 sm:text-left md:px-12"
  >
    <Socials centered />
    <div
      class="copyright-wrapper flex flex-col items-center whitespace-nowrap text-xs uppercase tracking-[0.15em] text-offWhite/55 sm:flex-row"
    >
      <span class="text-offWhite/80">Copyright Â© {currentYear}</span>
      <span class="separator hidden px-2 text-offWhite/30 sm:inline">|</span>
      <span class="font-medium text-offWhite/60" data-i18n-key={rightsCopy.key}>
        {rightsCopy.text}
      </span>
    </div>
  </div>
</footer>
