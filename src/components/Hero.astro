---
import type { CopyToken } from "../utils/i18n";

type HeroTitleSegments = {
  before: CopyToken;
  highlight: CopyToken;
  after: CopyToken;
};

interface Props {
  titleSegments: HeroTitleSegments;
  description: CopyToken;
}

const { titleSegments, description }: Props = Astro.props;
---

<section
  class="hero-gradient animate-heroWave px-6 md:px-0 py-20 md:py-28 flex justify-center text-center"
>
  <div class="space-y-7 max-w-3xl">
    <h1
      class="font-heading text-4xl md:text-6xl leading-snug md:leading-[1.2] text-offWhite drop-shadow-[0_10px_35px_rgba(3,8,18,0.35)]"
    >
      <span data-i18n-key={titleSegments.before.key}>
        {titleSegments.before.text}
      </span>
      {" "}
      <span
        class="text-transparent bg-gradient-to-r from-offWhite via-offWhite to-accent bg-clip-text"
        data-i18n-key={titleSegments.highlight.key}
      >
        {titleSegments.highlight.text}
      </span>
      {" "}
      <span data-i18n-key={titleSegments.after.key}>
        {titleSegments.after.text}
      </span>
    </h1>
    <p
      class="text-base md:text-lg text-offWhite/85"
      data-i18n-key={description.key}
    >
      {description.text}
    </p>
  </div>
</section>
