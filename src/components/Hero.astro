---
import type { CopyToken } from "../utils/i18n";

interface Props {
  title: CopyToken;
  description: CopyToken;
}

const { title, description }: Props = Astro.props;
---

<section
  class="hero-gradient animate-heroWave px-6 md:px-0 py-20 md:py-28 flex justify-center text-center"
>
  <div class="space-y-6 max-w-3xl">
    <h1
      class="font-heading text-4xl md:text-6xl leading-tight"
      data-i18n-key={title.key}
    >
      {title.text}
    </h1>
    <p class="text-base md:text-lg text-muted" data-i18n-key={description.key}>
      {description.text}
    </p>
  </div>
</section>
