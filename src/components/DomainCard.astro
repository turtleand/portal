---
const { label, emoji, tagline, href, variant, delay = 0 } = Astro.props;
const backgroundClasses = {
  ai: "bg-card-ai",
  growth: "bg-card-growth",
  build: "bg-card-build",
  blockchain: "bg-card-blockchain",
};
---

<a
  href={href}
  class:list={{
    "card-surface": true,
    group: true,
    "focus:outline-none": true,
    "focus-visible:ring-2": true,
    "focus-visible:ring-offset-2": true,
    "focus-visible:ring-accent": true,
    "focus-visible:ring-offset-deepBlue": true,
  }}
>
  <div
    class:list={{
      "card-content": true,
      flex: true,
      "h-full": true,
      "flex-col": true,
      "justify-between": true,
      "p-8": true,
      "transition-transform": true,
      "animate-fadeUp": true,
      [backgroundClasses[variant] ?? "bg-card-ai"]: true,
    }}
    style={`animation-delay: ${delay}ms;`}
  >
    <div class="space-y-4">
      <span class="text-4xl" aria-hidden="true">{emoji}</span>
      <div>
        <h2 class="font-heading text-3xl">{label}</h2>
        <p class="text-muted mt-2 text-base">{tagline}</p>
      </div>
    </div>
  </div>
</a>
